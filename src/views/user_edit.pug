extends base.pug

block content
    .container
        main
            .py-5.text-center
                h2 회원정보 수정
                    

        .container.content-box(style='width: 550px')
            form(method="POST", enctype="multipart/form-data") 
                .row.g-3
                    .col-12
                    label.form-label(for='name') name
                    .input-group.has-validation
                        input#name.form-control(type='text' name='name' value=loggedInUser.name required)
                        .invalid-feedback
                        br
                        | Your username is required.
                    .col-12
                    label.form-label(for='email')
                        | Email 
                        span.text-muted 
                    input#email.form-control(type='email' name='email' value=loggedInUser.email required)
                    .invalid-feedback
                        | Please enter a valid email address for shipping updates.
                    button.w-100.btn.btn-primary.btn-lg(type='submit') 저장