mixin keywordbox(hashtags)
    link(rel='stylesheet' href='../public/stylesheets/checkbox.css')
    input#action.inp-cbx(type='checkbox', name='hashtags', value='액션' )
    
    label.cbx(for='action') 
        span
            svg(width='12px',height='10px')
                use(xlink:href='#check')
        span #액션

    input#fantasy.inp-cbx(type='checkbox' name='hashtags', value='판타지' )
    label.cbx(for='fantasy')
        span
            svg(width='12px',height='10px')
                use(xlink:href='#check')
        span #판타지

    svg.inline-svg
        symbol#check(viewbox="0 0 12 10")
            polyline(points="1.5 6 4.5 9 10.5 1")